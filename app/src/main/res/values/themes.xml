<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DummyUserSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- SearchView color. -->
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
        <!-- MenuItem color. -->
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#808080</item>
    </style>
    <style name="TextAppearance" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>
</resources>